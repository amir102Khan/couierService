<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.BookOrder"
        android:background="@drawable/bg_splash"
      >
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Consignment Number"
                        android:textSize="@dimen/_15sdp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/segoe_ui"
                        android:textColor="@color/colorBlack"/>
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ed_consignment_num"
                        android:hint="fill consignment number"
                        android:maxLength="20"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/segoe_ui"
                        android:textSize="@dimen/_12sdp"/>


                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ed_weight"
                    android:hint="weight in Kg's"
                    android:layout_marginTop="10dp"
                    android:maxLength="20"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/segoe_ui"
                    android:textSize="@dimen/_12sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Company"
                        android:textSize="@dimen/_15sdp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/segoe_ui"
                        android:textColor="@color/colorBlack"/>

                    <RelativeLayout
                        android:id="@+id/expLayout"
                        android:background="@drawable/dropdown_bg"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Spinner
                            android:id="@+id/spinrCompanyPro"
                            android:padding="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pickup Point"
                        android:textSize="@dimen/_15sdp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/segoe_ui"
                        android:textColor="@color/colorBlack"/>

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ed_pickup_address"
                        android:hint="address"
                        android:drawableEnd="@drawable/ic_home"
                        android:maxLength="20"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/segoe_ui"
                        android:textSize="@dimen/_12sdp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/ed_city_cmpny"
                            android:hint="city"
                            android:layout_weight="1"
                            android:maxLength="20"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/segoe_ui"
                            android:textSize="@dimen/_12sdp"/>

                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/ed_state_cmpny"
                            android:hint="state"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:maxLength="20"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/segoe_ui"
                            android:textSize="@dimen/_12sdp"/>
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ed_pickup_pincode"
                        android:hint="pincode"
                        android:maxLength="20"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/segoe_ui"
                        android:inputType="number"
                        android:textSize="@dimen/_12sdp"/>

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ed_pickup_number"
                        android:hint="phone number"
                        android:maxLength="20"
                        android:inputType="number"
                        android:drawableEnd="@drawable/ic_phone"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/segoe_ui"
                        android:textSize="@dimen/_12sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery Point"
                        android:textSize="@dimen/_15sdp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/segoe_ui"
                        android:textColor="@color/colorBlack"/>

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ed_delivery_address"
                        android:hint="address"
                        android:drawableEnd="@drawable/ic_home"
                        android:maxLength="20"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/segoe_ui"
                        android:textSize="@dimen/_12sdp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/ed_city_delivery"
                            android:hint="city"
                            android:layout_weight="1"
                            android:maxLength="20"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/segoe_ui"
                            android:textSize="@dimen/_12sdp"/>

                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/ed_state_delivery"
                            android:hint="state"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:maxLength="20"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/segoe_ui"
                            android:textSize="@dimen/_12sdp"/>
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ed_delivery_pincode"
                        android:hint="pincode"
                        android:maxLength="20"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/segoe_ui"
                        android:textSize="@dimen/_12sdp"
                        android:inputType="number"/>

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ed_delivery_number"
                        android:hint="phone number"
                        android:inputType="number"
                        android:maxLength="20"
                        android:drawableEnd="@drawable/ic_phone"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/segoe_ui"
                        android:textSize="@dimen/_12sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Zone"
                        android:textSize="@dimen/_15sdp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/segoe_ui"
                        android:textColor="@color/colorBlack"/>

                    <RelativeLayout
                        android:id="@+id/zoneLayout"
                        android:background="@drawable/dropdown_bg"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Spinner
                            android:id="@+id/spinrZonePro"
                            android:padding="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type of Package"
                        android:textSize="@dimen/_15sdp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/segoe_ui"
                        android:textColor="@color/colorBlack"/>

                    <RelativeLayout
                        android:id="@+id/packageLayout"
                        android:background="@drawable/dropdown_bg"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Spinner
                            android:id="@+id/spinrPackageType"
                            android:padding="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:text="Next"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/button_bg"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="@dimen/_12sdp"
                        android:id="@+id/btn_next_to_bill"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</layout>